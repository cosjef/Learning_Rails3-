<html>
<head><title>Hello <%= @name %></title></head>
<body>
<h1>Hello <%= @name %></h1>
<%= form_tag :action => 'sign_in' do %>
<p>Enter your name:
<%= text_field_tag 'visitorName', @name %></p>
<%= submit_tag 'Sign in' %> <% end %>
<% if @names %> <ul>
<% @names.each do |name| %> <li><%= name %></li>
<% end %> </ul>
<% end %>
</body> </html>